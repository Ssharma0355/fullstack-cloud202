{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/server/(.*)",
            "dest": "server/index.js"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}